<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/lest_white"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_starts"
        android:textSize="35sp"
        android:id="@+id/txtTurn"
        android:textColor="@color/t_blue"
        android:shadowColor="@color/pink"
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowRadius="10"
        />

    <GridLayout
        android:layout_width="300sp"
        android:layout_height="300sp"
        >
        <Button
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:backgroundTint="@color/t_pink"
            android:text=""
            android:textColor="@color/close_black"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_margin="5sp"
            android:id="@+id/buttonLU"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            android:id="@+id/buttonU"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="5sp"
            android:backgroundTint="@color/t_pink"
            android:gravity="center"
            android:text=""
            android:textColor="@color/close_black"
            android:textSize="50sp"
            android:layout_row="0"
            />

        <Button
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:backgroundTint="@color/t_pink"
            android:text=""
            android:textColor="@color/close_black"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_margin="5sp"
            android:id="@+id/buttonRU"
            android:layout_row="0"
            />
        <Button
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:backgroundTint="@color/t_blue"
            android:text=""
            android:textColor="@color/close_black"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_margin="5sp"
            android:id="@+id/buttonLM"
            android:layout_row="1"
            android:layout_column="0"
            />

        <Button
            android:id="@+id/buttonM"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="5sp"
            android:backgroundTint="@color/t_blue"
            android:gravity="center"
            android:text=""
            android:textColor="@color/close_black"
            android:textSize="50sp"
            android:layout_row="1"
            />

        <Button
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:backgroundTint="@color/t_blue"
            android:text=""
            android:textColor="@color/close_black"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_margin="5sp"
            android:id="@+id/buttonRM"
            android:layout_row="1"
            />
        <Button
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:backgroundTint="@color/t_pink"
            android:text=""
            android:textColor="@color/close_black"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_margin="5sp"
            android:id="@+id/buttonLB"
            android:layout_row="2"
            android:layout_column="0"
            />

        <Button
            android:id="@+id/buttonB"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_margin="5sp"
            android:backgroundTint="@color/t_pink"
            android:gravity="center"
            android:text=""
            android:textColor="@color/close_black"
            android:textSize="50sp"
            android:layout_row="2"
            />

        <Button
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:backgroundTint="@color/t_pink"
            android:text=""
            android:textColor="@color/close_black"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_margin="5sp"
            android:id="@+id/buttonRB"
            android:layout_row="2"
            />

    </GridLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_to_reset"
        android:paddingTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/t_blue"
        android:shadowColor="@color/pink"
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowRadius="10"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:paddingTop="10dp"
        android:text="@string/start_over"
        android:textColor="@color/close_black"
        android:id="@+id/btnReset"
        />

</LinearLayout>